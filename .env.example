# Environment variables
# Copy this file to .env and fill in the values

# OpenAI (optional but recommended for sentiment summaries)
OPENAI_API_KEY=

# Trustpilot via RapidAPI
# Use your RapidAPI key that grants access to
# trustpilot-company-and-reviews-data.p.rapidapi.com
TRUSTPILOT_RAPIDAPI_KEY=

# Email configuration for Resend
RESEND_FROM="Competitor Lemonade Reports <send@builtagent.com>"
RESEND_REPLY_TO="support@builtagent.com"

# Server
PORT=5000

# Automation (secure token for batch endpoint)
# Generate a long random string and set in Replit Secrets
AUTOMATION_TOKEN=

# Scheduler (node-cron)
# Timezone for cron execution
CRON_TZ=Europe/London

# Cron expression for newsletter job
# Dev default (every 10 minutes): */10 * * * *
# Prod default (1st and 15th at 09:00): 0 9 1,15 * *
NEWSLETTER_CRON=

# Testing: limit scheduler to a single email address (optional)
NEWSLETTER_TEST_EMAIL=

# Testing: force send even if recent newsletter exists (true/false)
NEWSLETTER_FORCE=false
